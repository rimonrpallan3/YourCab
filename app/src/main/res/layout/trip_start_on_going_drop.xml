<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onGoingTripLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:clickable="true"
    android:gravity="bottom"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/driverHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15"
            android:layout_marginBottom="@dimen/_10"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.voyager.sayaradriver.costom.CircleImageView
                android:id="@+id/driverCircleImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10"
                            android:layout_marginTop="@dimen/_10"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Heading name " />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/userAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SubHeading name "
                            tools:layout_editor_absoluteX="104dp"
                            tools:layout_editor_absoluteY="63dp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driverBodyLayout"
            android:visibility="visible"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_80"
                    android:layout_marginLeft="@dimen/_20"
                    android:layout_marginRight="@dimen/_20">

                    <ImageView
                        android:layout_width="@dimen/_20"
                        android:layout_height="@dimen/_20"
                        android:layout_gravity="top"
                        android:src="@drawable/starting_point_dark_small" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_27"
                        android:layout_marginBottom="@dimen/_60"
                        android:layout_marginLeft="@dimen/_10"
                        android:layout_marginTop="@dimen/_20"
                        android:background="@color/highLightText" />

                    <ImageView
                        android:layout_width="@dimen/_20"
                        android:layout_height="@dimen/_20"
                        android:layout_marginTop="@dimen/_40"
                        android:src="@drawable/map_marker_small" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripStartOrginStartUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_08"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Title"
                            android:textSize="@dimen/_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_40"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripEndDestinStartUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_08"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Title"
                            android:textSize="@dimen/_12" />

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:text="Distance :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tripDist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:text="00 km" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_40"
                        android:text="Fsre :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tripFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:text="00.000 BD" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:text="Payment Mode :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tripPayType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20"
                        android:text="Cash" />

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_15"
                android:background="@color/divider_dark_gray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_20"
                    android:alpha="3"
                    android:background="@drawable/boder_black"
                    android:elevation="@dimen/_04"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/tripCustomerCall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="33.13"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30"
                            android:layout_height="@dimen/_30"
                            android:layout_marginTop="@dimen/_08"
                            android:src="@drawable/phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_08"

                            android:text="Customer" />


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".6"
                        android:background="@color/divider_dark_gray" />

                    <LinearLayout
                        android:id="@+id/tripSupportCall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="33.13"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30"
                            android:layout_height="@dimen/_30"
                            android:layout_marginTop="@dimen/_08"
                            android:src="@drawable/phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_08"
                            android:text="Help" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tripCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="33.13"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30"
                            android:layout_height="@dimen/_30"
                            android:layout_marginTop="@dimen/_08"
                            android:src="@drawable/phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_08"
                            android:text="@string/Cancel" />


                    </LinearLayout>


                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20"
                android:gravity="center">

                <Button
                    android:id="@+id/stopTrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_button"
                    android:text="End Trip"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>