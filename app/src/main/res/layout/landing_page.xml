<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

<FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="87">

</FrameLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="13"
      android:orientation="horizontal"
      android:background="@color/black"
      android:weightSum="80">


      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="20">
          <ImageButton
              android:id="@+id/homeTabImg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:src="@drawable/ic_home"
              android:layout_marginBottom="@dimen/_10">
          </ImageButton>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|center"
              android:textColor="@color/white"
              android:clickable="false"
              android:layout_marginBottom="@dimen/_04"
              android:text="TEST TEST" >
          </TextView>
      </FrameLayout>


      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="20">
          <ImageButton
              android:id="@+id/earnTabImg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:src="@drawable/ic_home"
              android:layout_marginBottom="@dimen/_10">
          </ImageButton>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|center"
              android:textColor="@color/white"
              android:clickable="false"
              android:layout_marginBottom="@dimen/_04"
              android:text="TEST TEST" >
          </TextView>
      </FrameLayout>
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="20">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|center"
              android:textColor="@color/white"
              android:clickable="false"
              android:layout_marginBottom="@dimen/_04"
              android:text="TEST TEST" >
          </TextView>

          <ImageButton
              android:id="@+id/rateTabImg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="@dimen/_10"
              android:background="@null"
              android:src="@drawable/ic_home"></ImageButton>
      </FrameLayout>
      <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="20">
          <ImageButton
              android:id="@+id/profileTabImg"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@null"
              android:src="@drawable/ic_account_circle"
              android:layout_marginBottom="@dimen/_10">
          </ImageButton>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|center"
              android:textColor="@color/white"
              android:clickable="false"
              android:layout_marginBottom="@dimen/_04"
              android:text="TEST TEST" >
          </TextView>
      </FrameLayout>

  </LinearLayout>



</LinearLayout>