<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18"
        android:layout_gravity="top"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/_20"
        android:layout_marginTop="@dimen/_20"
        android:text="@string/drivers_doc"/>

    <LinearLayout
        android:layout_width  ="match_parent"
        android:layout_height ="match_parent"
        android:layout_gravity ="center"
        android:layout_margin="@dimen/_20"
        android:orientation="vertical"
        android:gravity="center">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/edtPswd"
            android:hint="@string/paswd"
            android:paddingLeft="@dimen/_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10"
            android:background="@drawable/oval_shape_btn_3"/>

    </LinearLayout>

</FrameLayout>