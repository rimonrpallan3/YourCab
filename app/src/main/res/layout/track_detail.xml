<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center|left"
    android:layout_marginLeft="@dimen/_80">

    <FrameLayout
        android:layout_width="@dimen/_30"
        android:layout_height="@dimen/_250">

        <LinearLayout
            android:id="@+id/first_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@color/highLightText">

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/colorFill1"
            android:layout_width="@dimen/_04"
            android:layout_height="@dimen/_90"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:background="@color/highLightText"
            android:layout_marginTop="@dimen/_06"
            android:text="qqwueiqwuieqw" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/colorFill2"
            android:orientation="horizontal"
            android:layout_width="@dimen/_04"
            android:layout_height="@dimen/_160"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:background="@color/highLightText"
            android:layout_marginTop="@dimen/_06"
            android:text="qqwueiqwuieqw" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/colorFill3"
            android:orientation="horizontal"
            android:layout_width="@dimen/_04"
            android:layout_height="@dimen/_250"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:background="@color/highLightText"
            android:layout_marginTop="@dimen/_06"
            android:text="qqwueiqwuieqw" />


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_04"
            android:background="@color/highLightText">

        </LinearLayout>

        <ImageView
            android:id="@+id/imgFirstTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/_06"
            android:src="@drawable/bubble" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/imgSecondTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_80"
            android:layout_marginLeft="@dimen/_06"
            android:src="@drawable/bubble" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgThirdTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_150"
            android:layout_marginLeft="@dimen/_06"
            android:src="@drawable/bubble" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgFourthTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_06"
            android:src="@drawable/bubble" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250"
        android:layout_marginLeft="@dimen/_10"
        android:paddingRight="@dimen/_10">

        <TextView
            android:id="@+id/txtFirstTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="2dp"
            android:text="@string/track_first_txt"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtSecondTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/_80"
            android:text="@string/track_second_txt"
            android:textColor="@color/hintHighLightText" />

        <TextView
            android:id="@+id/txtThirdTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/_150"
            android:textColor="@color/hintHighLightText"
            android:text="@string/track_third_txt" />

        <TextView
            android:id="@+id/txtFourthTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_04"
            android:layout_marginLeft="2dp"
            android:textColor="@color/hintHighLightText"
            android:text="@string/track_fourth_txt" />

    </FrameLayout>


</LinearLayout>